#!/bin/sh

script_dir=$(dirname "$0")

if [ "$(id -u)" != "$(id restic -u)" ]; then
  log -e "This script can only be executed by user 'restic'."
  exit 1
fi

(
  log -i "Attempting to acquire lock for task DUMP with timeout of ${RESTIC_LOCK_TIMEOUT} seconds ..."
  flock --timeout ${RESTIC_LOCK_TIMEOUT} --exclusive 200

  log -i "Starting task DUMP ..."
  ${script_dir}/_dump/execute.sh && \
  ${script_dir}/_dump/prune.sh && \
  ${script_dir}/_dump/check.sh

  if [ $? -ne 0 ]; then
    log -e "Completed task DUMP with errors. Check log output above."
    exit 1
  else
    log -i "Completed task DUMP. Check log output above."
  fi
) 200> "${script_dir}/restic.lock"
